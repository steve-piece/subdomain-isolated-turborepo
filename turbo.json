{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "remoteCache": {
    "enabled": true
  },
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "NEXT_PUBLIC_APP_NAME",
        "NEXT_PUBLIC_APP_DOMAIN",
        "NEXT_PUBLIC_MARKETING_DOMAIN",
        "SUPABASE_SECRET_KEY",
        "STRIPE_SECRET_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "STRIPE_FREE_MONTHLY_PRICE_ID",
        "STRIPE_FREE_YEARLY_PRICE_ID",
        "STRIPE_PRO_MONTHLY_PRICE_ID",
        "STRIPE_PRO_YEARLY_PRICE_ID",
        "STRIPE_BUSINESS_MONTHLY_PRICE_ID",
        "STRIPE_BUSINESS_YEARLY_PRICE_ID",
        "STRIPE_ENTERPRISE_MONTHLY_PRICE_ID",
        "STRIPE_ENTERPRISE_YEARLY_PRICE_ID",
        "NEXT_PUBLIC_SUPABASE_URL",
        "NEXT_PUBLIC_SUPABASE_PUBLISHABLE_DEFAULT_KEY",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY",
        "NEXT_PUBLIC_SUPABASE_SERVICE_ROLE_KEY",
        "RESEND_API_KEY",
        "NEXT_PUBLIC_EMAIL_DOMAIN",
        "NEXT_PUBLIC_SENDER_EMAIL",
        "NEXT_PUBLIC_SUPPORT_EMAIL",
        "RESEND_ENABLE_INVITATION_EMAILS",
        "RESEND_ENABLE_WELCOME_EMAILS",
        "RESEND_VERIFY_EMAILS",
        "SEND_EMAIL_HOOK_SECRET",
        "SENTRY_DSN",
        "SENTRY_ORG",
        "SENTRY_PROJECT",
        "SENTRY_AUTH_TOKEN",
        "CHECKLY_API_KEY",
        "NEXT_PUBLIC_APP_ENV"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": [
        "NODE_ENV",
        "NEXT_RUNTIME",
        "VERCEL_GIT_COMMIT_SHA",
        "NEXT_PUBLIC_VERCEL_GIT_COMMIT_SHA",
        "NEXT_PUBLIC_APP_ENV",
        "NEXT_PUBLIC_APP_DOMAIN",
        "NEXT_PUBLIC_MARKETING_DOMAIN",
        "SENTRY_DSN",
        "NEXT_PUBLIC_SENTRY_DSN",
        "SENTRY_ORG",
        "SENTRY_PROJECT",
        "SENTRY_AUTH_TOKEN"
      ]
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "inputs": ["$TURBO_DEFAULT$", "tsconfig.json", "tsconfig.*.json"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "vitest.config.*", "vitest.setup.*"],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
