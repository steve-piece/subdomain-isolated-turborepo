{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "NODE_ENV",
        "RESEND_ENABLE_INVITATION_EMAILS",
        "RESEND_ENABLE_WELCOME_EMAILS",
        "RESEND_VERIFY_EMAILS",
        "NEXT_PUBLIC_APP_DOMAIN",
        "NEXT_PUBLIC_SUPABASE_URL",
        "NEXT_PUBLIC_SUPABASE_PUBLISHABLE_OR_ANON_KEY",
        "POSTGRES_URL",
        "POSTGRES_PRISMA_URL",
        "SUPABASE_URL",
        "POSTGRES_URL_NON_POOLING",
        "SUPABASE_JWT_SECRET",
        "SUPABASE_SERVICE_ROLE_KEY",
        "POSTGRES_USER",
        "POSTGRES_PASSWORD",
        "POSTGRES_DATABASE",
        "NEXT_PUBLIC_SUPABASE_PUBLISHABLE_OR_ANON_KEY",
        "POSTGRES_HOST",
        "SUPABASE_ANON_KEY",
        "RESEND_API_KEY",
        "EMAIL_DOMAIN",
        "SUPPORT_EMAIL",
        "SENDER_EMAIL",
        "RESEND_API_KEY",
        "SEND_EMAIL_HOOK_SECRET",
        "SENTRY_DSN",
        "SENTRY_AUTH_TOKEN",
        "CHECKLY_API_KEY",
        "APP_NAME",
        "SUPABASE_SECRET_KEY",
        "STRIPE_SECRET_KEY",
        "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "STRIPE_FREE_MONTHLY_PRICE_ID",
        "STRIPE_FREE_YEARLY_PRICE_ID",
        "STRIPE_PRO_MONTHLY_PRICE_ID",
        "STRIPE_PRO_YEARLY_PRICE_ID",
        "STRIPE_ENTERPRISE_MONTHLY_PRICE_ID",
        "STRIPE_ENTERPRISE_YEARLY_PRICE_ID",
        "NEXT_RUNTIME"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": [
        "NODE_ENV",
        "RESEND_ENABLE_INVITATION_EMAILS",
        "RESEND_ENABLE_WELCOME_EMAILS",
        "RESEND_VERIFY_EMAILS",
        "NEXT_PUBLIC_APP_DOMAIN",
        "NEXT_PUBLIC_SUPABASE_URL",
        "NEXT_PUBLIC_SUPABASE_PUBLISHABLE_OR_ANON_KEY",
        "POSTGRES_URL",
        "POSTGRES_PRISMA_URL",
        "SUPABASE_URL",
        "POSTGRES_URL_NON_POOLING",
        "SUPABASE_JWT_SECRET",
        "POSTGRES_USER",
        "POSTGRES_PASSWORD",
        "POSTGRES_DATABASE",
        "NEXT_PUBLIC_SUPABASE_PUBLISHABLE_OR_ANON_KEY",
        "POSTGRES_HOST",
        "SUPABASE_ANON_KEY",
        "SUPABASE_SERVICE_ROLE_KEY",
        "RESEND_API_KEY",
        "EMAIL_DOMAIN",
        "SUPPORT_EMAIL",
        "SENDER_EMAIL",
        "RESEND_API_KEY",
        "SEND_EMAIL_HOOK_SECRET",
        "SENTRY_DSN",
        "SENTRY_AUTH_TOKEN",
        "CHECKLY_API_KEY",
        "APP_NAME",
        "SUPABASE_SECRET_KEY",
        "STRIPE_SECRET_KEY",
        "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "STRIPE_FREE_MONTHLY_PRICE_ID",
        "STRIPE_FREE_YEARLY_PRICE_ID",
        "STRIPE_PRO_MONTHLY_PRICE_ID",
        "STRIPE_PRO_YEARLY_PRICE_ID",
        "STRIPE_ENTERPRISE_MONTHLY_PRICE_ID",
        "STRIPE_ENTERPRISE_YEARLY_PRICE_ID",
        "NEXT_RUNTIME",
        "STRIPE_SECRET_KEY"
      ]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
